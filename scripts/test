
#!/bin/bash

set -e

if [[ -n "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Execute project linters and test suites.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
    else
        # Lint
        flake8 pycurb tests

        # Code formatting
        yapf -dpr pycurb tests

        # Test suite with coverage enabled
        coverage run --source=pycurb/ -m unittest discover tests/
        coverage xml
    fi
fi